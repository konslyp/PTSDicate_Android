<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape
            android:shape="rectangle"
            android:thickness="2dp">
            <gradient
                android:startColor="@color/theme_color_grey"
                android:centerColor="@color/theme_color_grey"
                android:centerY="1.0"
                android:endColor="@color/theme_color_grey"
                android:angle="270" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle"
                android:thickness="2dp">
                <gradient
                    android:startColor="@color/app_theme_color"
                    android:centerColor="@color/app_theme_color"
                    android:centerY="1.0"
                    android:endColor="@color/app_theme_color"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>