<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_title_color">

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/inflate_header_done_cancel" />


    <LinearLayout
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:text="File Name With Format:"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/screen_existing_dictations_rename_FileName_TXT"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Test "
            android:textColor="@color/theme_color_grey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/light_grey_bg">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icn_rename" />

            <EditText
                android:id="@+id/screen_existing_rename_EDT"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHHIJKLMNOPQRSTUVWXYZ1234567890_ "
                android:scrollbars="vertical"
                android:maxLength="100"
                android:textColor="@color/theme_color_grey"
                android:background="@color/light_grey_bg">

                <requestFocus />
            </EditText>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>