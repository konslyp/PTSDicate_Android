<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inflate_footer_LAYOUT"
            android:layout_below="@+id/line"
            android:background="@color/theme_title_color"></LinearLayout>

        <RelativeLayout
            android:id="@+id/inflate_footer_LAYOUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="5">

                <RelativeLayout
                    android:id="@+id/existing_dictations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/existing_dictations_IMG"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icn_existing_dictations_disable"></ImageView>

                    <TextView
                        android:id="@+id/existing_dictations_TXT"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_below="@+id/existing_dictations_IMG"
                        android:gravity="center"
                        android:text="Existing Dictations"
                        android:textColor="#808080"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/upload_IMG"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icn_uploads_disable"></ImageView>

                    <TextView
                        android:id="@+id/upload_TXT"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_below="@+id/upload_IMG"
                        android:gravity="center"
                        android:text="Uploads In progress"
                        android:textColor="#808080"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/record_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/record_IMG"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:contentDescription="@null"
                            android:src="@drawable/style_icn_record" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/record_TXT"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_below="@+id/record_lay"
                        android:gravity="center_horizontal|bottom"
                        android:text="Record"
                        android:textColor="#808080"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/settings_IMG"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icn_settings_disable"></ImageView>

                    <TextView
                        android:id="@+id/settings_TXT"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_below="@+id/settings_IMG"
                        android:gravity="center"
                        android:text="Settings"
                        android:textColor="#808080"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/logout_IMG"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:contentDescription="@null"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/style_icn_logout" />

                    <TextView
                        android:id="@+id/logout_TXT"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_below="@+id/logout_IMG"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:text="Logout"
                        android:textColor="@drawable/style_footer_text"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>